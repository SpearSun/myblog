<%#= form_tag("/sessions", method: 'create') do %>
<%= form_for :user do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password_digest %>
  </div>
  
  <div class="actions"><%= f.submit %></div>
<% end %>
