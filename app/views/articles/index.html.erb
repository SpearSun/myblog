<p id="notice"><%= notice %></p>

<!--h1>Listing Articles</h1-->

  <% @articles.each do |article| %>
      
    <img style="float: left; vertical-align: middle; margin: 0 10px 0 0; width: 60px; heigth: 60px;" src="/assets/images/home.png" alt="home" /><h1 style="margin: 15px 0 0 0;"><%= article.title %></h1>
    <p><%= article.published_at %></p>
    <p><%= article.cached_tag_list %></p>
    <p><%= article.body %></p>
    <div class="right"><%= link_to 'Show', article %>
    <%= link_to 'Edit', edit_article_path(article) %>
    <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></div><br />
  <% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Slug</th>
      <th>Body</th>
      <th>Body html</th>
      <th>Active</th>
      <th>Approved comments count</th>
      <th>Cached tag list</th>
      <th>Published at</th>
      <th>Edited at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <img style="float: left; vertical-align: middle; margin: 0 0 0 0; width: 60px; heigth: 60px;" src="/assets/images/home.png" alt="home" /><h1 style="margin: 15px 0 0 0;"><%= article.title %></h1>
        <p><%= article.published_at %></p>
        <p><%= article.cached_tag_list %></p>
        <p><%= article.body %></p>
        <div class="right"><%= link_to 'Show', article %>
        <%= link_to 'Edit', edit_article_path(article) %>
        <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></div>

        <td><%= article.title %></td>
        <td><%= article.slug %></td>
        <td><%= article.body %></td>
        <td><%= article.body_html %></td>
        <td><%= article.active %></td>
        <td><%= article.approved_comments_count %></td>
        <td><%= article.edited_at %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

