class UsersController < ApplicationController
  before_action :set_user, only: [:show, :edit, :update]

  # GET /users/1
  # GET /users/1.json
  def show
  end

  # GET /user/new
  def new
    @user = User.new
    @users = User.all
  end

  # GET /users/1/edit
  def edit
  end

  # POST /users
  # POST /users.json
  def create
    @user = User.new(user_params)

    respond_to do |format|
      if @user.save
        # flash[:notice] = "User was successfully created."
        # redirect_to root_path
        @user.sign_in!(session)
        format.html { redirect_to root_path, notice: 'User was successfully created.' }
        format.js   {}
        format.json { render :show, status: :created, location: @user }
      else
        format.html { render :new }
        format.json { render json: @user.errors, status: :unprocessable_entity }
      end
    end
  end

  attr_accessor :remember_me

  def sign_in
    if request.post? and user_params
      @user = User.find_by_name(user_params["name"])
      if @user and @user.authenticate(user_params["password"])
        @user.sign_in!(session)
        remember_me? ? @user.remember!(cookies) : @user.forget!(cookies)
        flash[:notice] = "User #{@user.name} signed in."
        redirect_to root_path
      else
        # @user.clear_password!
        flash[:notice] = "Invalid name or password!"
        redirect_to root_path
      end
    end
  end

  def sign_out
    # cookies.delete(:remember_me)
    # cookies.delete(:authorization_token)
    user = User.find_by(name: session[:name])
    user.forget!(cookies)
    user.sign_out!(session)
    flash[:notice] = "User signed out."
    redirect_to root_path
  end

  def remember_me?
    remember_me == "1"
  end
    
  # PATCH/PUT /users/1
  # PATCH/PUT /users/1.json
  def update
    respond_to do |format|
      if @user.update(user_params)
        format.html { redirect_to @user, notice: 'User was successfully updated.' }
        format.json { render :show, status: :ok, location: @user }
      else
        format.html { render :edit }
        format.json { render json: @user.errors, status: :unprocessable_entity }
      end
    end
  end

  # DELETE /users/1
  # DELETE /users/1.json
  def destroy
    @user.destroy
    respond_to do |format|
      format.html { redirect_to users_url, notice: 'User was successfully destroyed.' }
      format.json { head :no_content }
    end
  end

  private
    # Use callbacks to share common setup or constraints between actions.
    def set_user
      @user = User.find(session[:id] || params[:id])
    end

    # Never trust parameters from the scary internet, only allow the white list through.
    def user_params
      params.require(:user).permit(:name, :password, :address, :email) 
    end
end
